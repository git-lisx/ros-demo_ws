{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ROS:Launch文件调试",
            "type": "ros",
            "request": "launch",
            "target": "/home/dataexa/lisx/ros-demo_ws/src/xian_pkg/launch/start_demo.launch"
        },
        {
            "name": "ROS Debug: cpp单节点调试",
            "type": "cppdbg",
            "request": "launch",
            "program": "/home/dataexa/lisx/ros-demo_ws/devel/lib/xian_pkg/hello_c",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/home/dataexa/lisx/ros-demo_ws",
            "environment": [
                {
                    "name": "ROS_MASTER_URI",
                    "value": "http://localhost:11311"
                },
                {
                    "name": "ROS_PACKAGE_PATH",
                    "value": "${env:ROS_PACKAGE_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            // "preLaunchTask": "catkin_build",
            // "postDebugTask": "source env"
        },
        {
            "name": "ROS Debug: python单节点调试",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/dataexa/lisx/ros-demo_ws/src/xian_pkg/scripts/hello_p.py",
            "args": [],
            "console": "integratedTerminal",
            "env": {
                "ROS_MASTER_URI": "http://localhost:11311",
                "ROS_PACKAGE_PATH": "${env:ROS_PACKAGE_PATH}"
            }
        },
        {
            "name": "source ROS Python 节点调试",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/xian_pkg/scripts/add_two_ints_server.py",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/devel/lib/python3/dist-packages:${env:PYTHONPATH}",
                "ROS_PACKAGE_PATH": "${workspaceFolder}/src:${env:ROS_PACKAGE_PATH}",
                "ROS_MASTER_URI": "http://localhost:11311",
                "ROS_ROOT": "/opt/ros/noetic/share/ros"
            },
            // 运行前先source环境，在tasks.json中定义了"label": "source_ros"
            "preLaunchTask": "source_ros"
        },
        {
            "name": "ROS Python通用调试",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/devel/lib/python3/dist-packages:${env:PYTHONPATH}"
            }
        },
        {
            "name": "ROS C++通用调试",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/devel/lib/xian_pkg/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "ROS_MASTER_URI",
                    "value": "http://localhost:11311"
                },
                {
                    "name": "ROS_PACKAGE_PATH",
                    "value": "${workspaceFolder}/src:${env:ROS_PACKAGE_PATH}"
                },
                {
                    "name": "ROS_ROOT",
                    "value": "/opt/ros/noetic/share/ros"
                },
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/devel/lib:${env:LD_LIBRARY_PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "catkin_make:debug"
        }
    ]
}